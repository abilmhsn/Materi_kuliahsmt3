<LoginScreen>:
    orientation: 'vertical'
    padding: 20
    spacing: 15
    canvas.before:
        Color:
            rgba: 0.9, 0.95, 1, 1  # Latar belakang biru pucat
        Rectangle:
            pos: self.pos
            size: self.size

    # Logo di bagian atas tengah
    BoxLayout:
        size_hint_y: None
        height: 120
        padding: 0, 10
        Image:
            source: "Tajuk.png"  # Ganti dengan path file logo Anda
            allow_stretch: True
            keep_ratio: True

    Label:
        text: "Login"
        font_size: 32
        bold: True
        color: 0.2, 0.4, 0.6, 1
        size_hint_y: None
        height: 50

    Label:
        text: "Username"
        size_hint_y: None
        height: 30

    TextInput:
        id: username_input
        hint_text: "Masukkan Username"
        multiline: False
        size_hint_y: None
        height: 50

    Label:
        text: "Password"
        size_hint_y: None
        height: 30

    TextInput:
        id: password_input
        hint_text: "Masukkan Password"
        multiline: False
        password: True
        size_hint_y: None
        height: 50

    Button:
        text: "Login"
        size_hint_y: None
        height: 60
        background_color: 0.2, 0.6, 0.8, 1
        color: 1, 1, 1, 1
        on_press: root.validate_login(None)

<PemesananScreen>:
    orientation: 'vertical'
    padding: 20
    spacing: 15
    canvas.before:
        Color:
            rgba: 0.95, 0.95, 1, 1  # Latar belakang biru sangat pucat
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        text: "Form Pemesanan Baju"
        font_size: 28
        bold: True
        color: 0.2, 0.4, 0.6, 1
        size_hint_y: None
        height: 50

    Label:
        text: "Nama Lengkap"
        size_hint_y: None
        height: 30

    TextInput:
        id: nama_input
        hint_text: "Masukkan Nama Lengkap"
        multiline: False
        size_hint_y: None
        height: 50

    Label:
        text: "Alamat Email"
        size_hint_y: None
        height: 30

    TextInput:
        id: email_input
        hint_text: "Masukkan Alamat Email"
        multiline: False
        size_hint_y: None
        height: 50

    Label:
        text: "Pilih Baju"
        size_hint_y: None
        height: 30

    TextInput:
        id: baju_spinner
        hint_text: "Masukkan jenis baju (e.g., Jas Formal)"
        multiline: False
        size_hint_y: None
        height: 50

    Button:
        text: "Kirim Pemesanan"
        size_hint_y: None
        height: 60
        background_color: 0.2, 0.6, 0.8, 1
        color: 1, 1, 1, 1
        on_press: root.submit_order(None)
